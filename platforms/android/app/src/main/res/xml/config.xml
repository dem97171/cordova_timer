<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.cordova_timer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Badge">
        <param name="android-package" value="de.appplant.cordova.plugin.badge.Badge" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <feature name="ToForeground">
        <param name="android-package" value="com.cts.toforeground.ToForeground" />
    </feature>
    <feature name="IntentPlugin">
        <param name="android-package" value="com.napolitano.cordova.plugin.intent.IntentPlugin" />
    </feature>
    <feature name="IntentPlugin">
        <param name="android-package" value="sevensky.cordova.plugins.IntentPlugin" />
    </feature>
    <feature name="WakeupPlugin">
        <param name="android-package" value="org.nypr.cordova.wakeupplugin.WakeupPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>cordova_timer</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
